<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Patient Records</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .nav-tabs {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">Patient Management System</h1>

        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search">Search Patients</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/records">View All Records</a>
            </li>
        </ul>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">All Patient Records</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Medical History</th>
                                <th>Treatment Notes</th>
                                <th>Last Visited</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% patients.forEach(patient => { %>
                                <tr>
                                    <td>
                                        <%= patient.first_name %>
                                            <%= patient.last_name %>
                                    </td>
                                    <td>
                                        <%= patient.contact_number %>
                                    </td>
                                    <td>
                                        <%= patient.medical_history %>
                                    </td>
                                    <td>
                                        <%= patient.treatment_notes %>
                                    </td>
                                    <td>
                                        <%= patient.formatted_created_date %>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger btn-sm delete-btn" data-id="<%= patient.id %>">Delete</button>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <a href="/search" class="btn btn-primary me-2">Search Patients</a>
                    <a href="/" class="btn btn-secondary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add event listeners to all delete buttons
            document.querySelectorAll('.delete-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const patientId = this.getAttribute('data-id');

                    // Send DELETE request
                    fetch(`/delete/${patientId}`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                // Remove the row from the table
                                this.closest('tr').remove();
                            } else {
                                console.error('Error deleting patient:', data.message);
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                        });
                });
            });
        });
    </script>
</body>

</html>