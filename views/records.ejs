<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Patient Records</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">All Patient Records</h1>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Medical History</th>
                                <th>Treatment Notes</th>
                                <th>Last Visit</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% patients.forEach(patient => { %>
                                <tr>
                                    <td>
                                        <%= patient.first_name %>
                                            <%= patient.last_name %>
                                    </td>
                                    <td>
                                        <%= patient.contact_number %>
                                    </td>
                                    <td>
                                        <%= patient.medical_history %>
                                    </td>
                                    <td>
                                        <%= patient.treatment_notes %>
                                    </td>
                                    <td>
                                        <%= patient.formatted_last_visit_date %>
                                    </td>
                                    <td>
                                        <%= patient.formatted_created_date %>
                                    </td>
                                    <td>
                                        <form action="/delete/<%= patient.id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="event.preventDefault(); this.form.submit();">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <a href="/" class="btn btn-secondary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>