{
    "name": "patient-management-system",
    "version": "1.0.0",
    "description": "A desktop application for managing patient records",
    "main": "main.js",
    "author": {
        "name": "prayag",
        "email": "prayagjasani2004@gmail.com",
        "url": "https://prayag.com"
    },
    "scripts": {
        "convert-icon": "node scripts/convert-icon.js",
        "prestart": "npm run convert-icon",
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "publish": "electron-builder --win -p always"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/prayagjasani/patient-management-system.git"
    },
    "dependencies": {
        "body-parser": "^1.20.2",
        "compromise": "^14.12.0",
        "ejs": "^3.1.9",
        "electron-log": "^5.1.1",
        "electron-updater": "^6.1.7",
        "express": "^4.18.2",
        "mysql2": "^3.6.5",
        "natural": "^6.10.0",
        "string-similarity": "^4.0.4"
    },
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "sharp": "^0.33.1"
    },
    "build": {
        "appId": "com.patientmanagement.app",
        "productName": "Patient Management System",
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "win": {
            "target": [{
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }],
            "icon": "assets/icon.ico",
            "artifactName": "${productName}-Setup-${version}.${ext}",
            "publisherName": "prayag",
            "verifyUpdateCodeSignature": false
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Patient Management System",
            "installerIcon": "assets/icon.ico",
            "uninstallerIcon": "assets/icon.ico",
            "installerHeaderIcon": "assets/icon.ico",
            "menuCategory": true,
            "displayLanguageSelector": true,
            "license": "license.txt",
            "include": "installer.nsh"
        },
        "publish": [{
            "provider": "github",
            "owner": "prayagjasani",
            "repo": "patient-management-system"
        }],
        "files": [
            "**/*",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
            "!**/node_modules/*.d.ts",
            "!**/node_modules/.bin",
            "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
            "!.editorconfig",
            "!**/._*",
            "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
            "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
            "!**/{appveyor.yml,.travis.yml,circle.yml}",
            "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
        ],
        "extraResources": [{
                "from": "assets/",
                "to": "assets/",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "views/",
                "to": "views/",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "public/",
                "to": "public/",
                "filter": [
                    "**/*"
                ]
            }
        ]
    }
}